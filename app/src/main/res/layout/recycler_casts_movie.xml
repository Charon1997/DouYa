<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="100dp"
    android:layout_height="180dp"
    android:layout_marginLeft="24dp">

    <ImageView
        android:id="@+id/item_movie_cast_img"
        android:layout_width="90dp"
        android:layout_height="108dp"
        android:layout_gravity="center"
        android:src="@drawable/no_avatars" />

    <TextView
        android:id="@+id/item_movie_cast_text_name"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_director"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/item_movie_cast_text_duty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/director"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"/>

</LinearLayout>